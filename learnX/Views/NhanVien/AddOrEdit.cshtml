@model NhanVienViewModel

@{
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <p class="mt-0 mb-2 fw-semibold text-dark font-18 text-center">@ViewBag.RenderedHtmlTitle</p>
            <form asp-action="AddOrEdit" asp-controller="NhanVien" asp-route-id="@Model.uID">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="uID" value="@Model.uID" />
                <div>
                    <div class="form-group mb-2">
                        <label asp-for="uHovaTen" class="control-label"></label>
                        <div class="input-group mb-2">
                            <input asp-for="uHovaTen" class="form-control" placeholder="Nhập họ và tên" value="@Model.uHovaTen" />
                        </div>
                        <span asp-validation-for="uHovaTen" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                        <div class="form-check">
                            <input asp-for="uGioiTinh" class="form-check-input" type="checkbox"
                                   onchange="$('#uGioiTinh').val(this.checked)" value="@Model.uGioiTinh">
                            <label asp-for="uGioiTinh" class="form-check-label"></label>
                        </div>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                        <label asp-for="uNgaySinh" class="control-label"></label>
                        <div class="input-group mb-2">
                            <input asp-for="uNgaySinh" type="date" class="form-control" placeholder="" value="@Model.uNgaySinh" />
                        </div>
                        <span asp-validation-for="uNgaySinh" class="text-danger"></span>
                    </div><!--end form-group-->


                    <div class="form-group mb-2">
                        <label asp-for="uSoDienThoai" class="control-label"></label>
                        <div class="input-group mb-2">
      <input asp-for="uSoDienThoai" type="number" class="form-control" placeholder="Nhập số điện thoại" value="@Model.uSoDienThoai" />
                        </div>
                        <span asp-validation-for="uSoDienThoai" class="text-danger"></span>
                    </div><!--end form-group-->


                    <div class="form-group mb-2">
                        <label asp-for="uDiaChi" class="control-label"></label>
                        <div class="input-group mb-2">
              <textarea asp-for="uDiaChi" class="form-control" placeholder="Nhập nội dung" rows="3" values = "@Model.uDiaChi">
                                </textarea>
                        </div>
                        <span asp-validation-for="uDiaChi" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group">
                        <br />
                        <div class="col-md-12 offset-md-5">
                            <div class="d-flex">
                                <div style="margin-right:10px;">
                                    <input type="submit" value="Submit" class="btn btn-primary btn-block" style="width:80px" />
                                </div>
                                <div>
              <a asp-controller="NhanVien" asp-action="Index" class="btn btn-success text-white"><i class="fe-log-out"></i> Close</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div> <!-- end card-->
</div>

@section scripts{
}
